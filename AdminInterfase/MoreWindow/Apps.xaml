<Window x:Class="AdminInterfase.MoreWindow.Apps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminInterfase.MoreWindow"
        mc:Ignorable="d"
        Title="App" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF157FED"/>
                <GradientStop Color="#FF6D008D" Offset="1"/>
                <GradientStop Color="#FF5829D9" Offset="0.548"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox TextChanged="SearchBox_TextChanged" Name="searchBox" HorizontalAlignment="Left" Margin="29,11,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="194"/>
        <Button Background="White" Content="Поиск" HorizontalAlignment="Left" Margin="228,9,0,0" VerticalAlignment="Top"/>
        <Button Content="Экспорт" Background="White" HorizontalAlignment="Right" Margin="0,9,28,0" VerticalAlignment="Top"/>
        <ListBox Name="listBox" Background="#80FFFFFF" Margin="30,45,30,30"  d:ItemsSource="{d:SampleData ItemCount=5}"/>
    </Grid>
</Window>
