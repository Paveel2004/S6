<Window x:Class="AdminInterfase.MoreWindow.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminInterfase.MoreWindow"
        mc:Ignorable="d"
        Title="Приложения" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF157FED"/>
                <GradientStop Color="#FF6D008D" Offset="1"/>
                <GradientStop Color="#FF5829D9" Offset="0.548"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ListBox Name="listBox" Margin="30,45,30,30"  d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="Bahnschrift SemiLight" FontSize="14">
            <ListBox.Background>
                <SolidColorBrush Color="#FFFFFF" Opacity="0.7"/>
            </ListBox.Background>
        </ListBox>
    </Grid>
</Window>
