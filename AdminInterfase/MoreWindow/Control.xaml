<Window x:Class="AdminInterfase.MoreWindow.Control"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminInterfase.MoreWindow"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        KeyDown="Window_KeyDown"
        Title="Контроль доступа" Height="194" Width="341">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF157FED"/>
                <GradientStop Color="#FF6D008D" Offset="1"/>
                <GradientStop Color="#FF5829D9" Offset="0.548"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Name="site" HorizontalAlignment="Center" Height="33" Margin="0,32,0,0" FontSize="20" TextWrapping="Wrap" Background="AntiqueWhite" Text="Введите адрес сайта" VerticalAlignment="Top" Width="267"/>
        <Button Content="Заблокировать" HorizontalAlignment="Left" Height="36" Margin="37,82,0,0"  Background="PaleVioletRed" VerticalAlignment="Top" Width="124" Click="Block_Click"/>
        <Button Content="Разблокировать" HorizontalAlignment="Left" Height="36" Margin="179,82,0,0"  Background="DarkSeaGreen" VerticalAlignment="Top" Width="125" Click="UnBlock_Click"/>

    </Grid>
</Window>
