<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S6"
        xmlns:oxy="http://oxyplot.org/wpf" x:Class="S6.MainWindow"
        mc:Ignorable="d"
        Title="S6" Height="450" Width="1052" Icon="/icons8-компьютер-96.png" KeyDown="Menu_KeyDown">

    <Grid>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="Gray" Offset="1"/>
                <GradientStop Color="Black" Offset="0.072"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="Menu" Background="Gray" HorizontalAlignment="Left" Width="190">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button  Content="{Binding Text}" Height="30" FontSize="14" FontFamily="Bahnschrift SemiBold"  Width="176" Click="MenuItem_Click"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="Information_ListBox" Margin="220,30,30,40" />

        <TabControl x:Name="Analytics_and_graphs" Margin="220,30,30,30" Visibility="Hidden" >
            <TabItem Header="Процессор">
                <Grid Background="White">
                    <ListBox x:Name="Analytics_Users_ListBox_CPU" SelectionChanged="Analytics_Users_ListBox_SelectionChanged" HorizontalAlignment="Left" Width="200" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <oxy:PlotView Name="OxyCPU" HorizontalAlignment="Left" Width="324" Margin="220,0,0,0"/>



                </Grid>
            </TabItem>
            <TabItem Header="Оперативная память">

                <Grid Background="White">
                    <ListBox x:Name="Analytics_Users_ListBox_RAM"  HorizontalAlignment="Left" Width="200" />
                    <oxy:PlotView Name="OxyRAM" HorizontalAlignment="Left" Width="324" Margin="220,0,0,0"/>



                </Grid>
            </TabItem>
        </TabControl>

        <ComboBox DropDownOpened="Type_DropDownOpened"  Name="Type" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="586,1,0,0"/>
        <ComboBox DropDownOpened="Character_DropDownOpened"  Name="Character" HorizontalAlignment="Left" Margin="813,0,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.478,0.521"/>
        <Button Content="Показать" Background="White" HorizontalAlignment="Left" Margin="948,2,0,0" VerticalAlignment="Top" Width="57"/>
        <Label Content="Тип характеристики" Foreground="White" HorizontalAlignment="Left" Margin="452,-1,0,0" VerticalAlignment="Top"/>
        <Label Content="Характеристика" Foreground="White" HorizontalAlignment="Left" Margin="711,-2,0,0" VerticalAlignment="Top"/>
        <DataGrid  Margin="220,30,30,30" VerticalAlignment="Top"/>
        <ComboBox DropDownOpened="ComputerName_DropDownOpened" Name="ComputerName" HorizontalAlignment="Left" Margin="327,1,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Имя компьютера" Foreground="White" HorizontalAlignment="Left" Margin="217,-2,0,0" VerticalAlignment="Top"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="204,0,0,0" Height="45">
            <Label Content="Начальная дата" Foreground="White" Margin="10"/>
            <DatePicker HorizontalAlignment="Left" Height="25" Width="150" Margin="10"/>
            <Label Content="Конечная дата" Foreground="White" Margin="10"/>
            <DatePicker HorizontalAlignment="Left" Height="25" Width="150" Margin="10"/>
        </StackPanel>












    </Grid>
</Window>
